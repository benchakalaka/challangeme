<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg"
	tools:context="${packageName}.${activityClass}" >

	<TextView
		android:id="@+id/twPass"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/do_you_want_to_be_asked_password"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@android:color/white" />

	<RadioGroup
		android:id="@+id/rgAskPass"
		android:layout_below="@+id/twPass"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border" >

		<RadioButton
			android:id="@+id/rbAskPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:text="@string/yes"
			android:textColor="@android:color/white" />

		<RadioButton
			android:id="@+id/rbDontAskPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/no"
			android:textColor="@android:color/white" />
	</RadioGroup>

	<RelativeLayout
		android:id="@+id/rlChangePass"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rgAskPass"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/key" />

		<TextView
			android:id="@+id/text1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivDeleteOrOpenNoteDetailRightButton"
			android:layout_toRightOf="@+id/image"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/changePassword"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivDeleteOrOpenNoteDetailRightButton"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlNotesOrder"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rlChangePass"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/imageNotesOrder"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/list" />

		<TextView
			android:id="@+id/text3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivNotesOrder"
			android:layout_toRightOf="@+id/imageNotesOrder"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/changeNotesOrder"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivNotesOrder"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlNotifications"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rlNotesOrder"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/imageNotifications"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/info" />

		<TextView
			android:id="@+id/textNotifications"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivNotifications"
			android:layout_toRightOf="@+id/imageNotifications"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/notifications"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivNotifications"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

</RelativeLayout>