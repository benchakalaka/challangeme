<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg"
	tools:context="${packageName}.${activityClass}" >

	<RelativeLayout
		android:id="@+id/rlChangeEmail"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_alignParentTop="true"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/image"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/email" />

		<TextView
			android:id="@+id/text1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivDeleteOrOpenNoteDetailRightButton"
			android:layout_toRightOf="@+id/image"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/change_email"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivDeleteOrOpenNoteDetailRightButton"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlNotesOrder"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rlChangeEmail"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/imageNotesOrder"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/list" />

		<TextView
			android:id="@+id/text3"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivNotesOrder"
			android:layout_toRightOf="@+id/imageNotesOrder"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/changeNotesOrder"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivNotesOrder"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlNotifications"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rlNotesOrder"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/imageNotifications"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/info" />

		<TextView
			android:id="@+id/textNotifications"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivNotifications"
			android:layout_toRightOf="@+id/imageNotifications"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/notifications"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivNotifications"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rlChangePass"
		android:layout_width="fill_parent"
		android:layout_height="70dp"
		android:layout_below="@+id/rlNotifications"
		android:layout_margin="5dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="vertical" >

		<ImageView
			android:id="@+id/image2"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="5dp"
			android:background="@drawable/key" />

		<TextView
			android:id="@+id/text2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_gravity="center_vertical"
			android:layout_toLeftOf="@+id/ivDeleteOrOpenNoteDetailRightButton2"
			android:layout_toRightOf="@+id/image2"
			android:gravity="center_horizontal"
			android:lines="1"
			android:maxLines="1"
			android:singleLine="true"
			android:text="@string/password"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/ivDeleteOrOpenNoteDetailRightButton2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_margin="5dp"
			android:background="@drawable/arrowright"
			android:padding="5dp" />
	</RelativeLayout>

</RelativeLayout>