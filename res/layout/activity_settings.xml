<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg"
	tools:context="${packageName}.${activityClass}" >

	<TextView
		android:id="@+id/twPass"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/etPassword"
		android:text="@string/password"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@android:color/white" />

	<EditText
		android:id="@+id/etPassword"
		android:layout_width="wrap_content"
		android:layout_height="50dp"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_below="@+id/twPass"
		android:layout_margin="10dp"
		android:background="@drawable/transparent_inside_and_white_border"
		android:ems="10"
		android:hint="@string/hint"
		android:inputType="textPassword"
		android:padding="3dp"
		android:textColor="@android:color/white" >
	</EditText>

	<RadioGroup
		android:id="@+id/radioGroup1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/etPassword"
		android:layout_margin="10dp"
		android:background="@drawable/transparent_inside_and_white_border" >

		<RadioButton
			android:id="@+id/rbAskPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:checked="true"
			android:text="Ask password" />

		<RadioButton
			android:id="@+id/rbDontAskPassword"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Do not ask password" />
	</RadioGroup>

</RelativeLayout>