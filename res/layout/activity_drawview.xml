<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black"
	tools:context="${packageName}.${activityClass}" >

	<com.ik.ggnote.custom.CDrawingView
		android:id="@+id/cDrawingView"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<ImageView
		android:id="@+id/ivLock"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:layout_margin="10dp"
		android:background="@drawable/unlocked" />

	<HorizontalScrollView
		android:id="@+id/hsvDrawShapes"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/llBottomMenu"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="horizontal"
		android:visibility="gone" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/transparent_inside_and_white_border"
			android:orientation="horizontal"
			android:visibility="visible" >

			<ImageButton
				android:id="@+id/ibShapesCircle"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/circle" />

			<ImageButton
				android:id="@+id/ibShapesRectangle"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/rectangle" />

			<ImageButton
				android:id="@+id/ibShapesLine"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="centerCrop"
				android:src="@drawable/line" />

			<ImageButton
				android:id="@+id/ibShapesTriangle"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/triangle" />

			<ImageButton
				android:id="@+id/ibShapesFreeDrawing"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/free_drawing" />

			<ImageButton
				android:id="@+id/ibDrawText"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="centerInside"
				android:src="@drawable/text" />
		</LinearLayout>
	</HorizontalScrollView>

	<HorizontalScrollView
		android:id="@+id/hsvBrushColour"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/llBottomMenu"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="horizontal"
		android:visibility="gone" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/transparent_inside_and_white_border"
			android:orientation="horizontal"
			android:visibility="visible" >

			<ImageButton
				android:id="@+id/ibColorPicker"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/palette" />

			<ImageButton
				android:id="@+id/ibColour1"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@android:color/white"
				android:tag="#ffffff" />

			<ImageButton
				android:id="@+id/ibColour2"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#0000FF"
				android:tag="#0000FF" />

			<ImageButton
				android:id="@+id/ibColour3"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="centerCrop"
				android:src="#008000"
				android:tag="#008000" />

			<ImageButton
				android:id="@+id/ibColour4"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#00FFA9"
				android:tag="#00FFA9" />

			<ImageButton
				android:id="@+id/ibColour5"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#FF0000"
				android:tag="#FF0000" />

			<ImageButton
				android:id="@+id/ibColour6"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="centerCrop"
				android:src="#FF00EA"
				android:tag="#FF00EA" />

			<ImageButton
				android:id="@+id/ibColour7"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#FFFB00"
				android:tag="#FFFB00" />

			<ImageButton
				android:id="@+id/ibColour8"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#FF9D00"
				android:tag="#FF9D00" />

			<ImageButton
				android:id="@+id/ibColour9"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#00FFFF"
				android:tag="#00FFFF" />

			<ImageButton
				android:id="@+id/ibColour10"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#7BFF4F"
				android:tag="#7BFF4F" />

			<ImageButton
				android:id="@+id/ibColour11"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#828282"
				android:tag="#828282" />

			<ImageButton
				android:id="@+id/ibColour12"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#E6C497"
				android:tag="#E6C497" />

			<ImageButton
				android:id="@+id/ibColour13"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#FF3366"
				android:tag="#FF3366" />

			<ImageButton
				android:id="@+id/ibColour14"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#B28F47"
				android:tag="#B28F47" />

			<ImageButton
				android:id="@+id/ibColour15"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#00FF00"
				android:tag="#00FF00" />

			<ImageButton
				android:id="@+id/ibColour16"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#0099CC"
				android:tag="#0099CC" />

			<ImageButton
				android:id="@+id/ibColour17"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="#8A2E00"
				android:tag="#8A2E00" />
		</LinearLayout>
	</HorizontalScrollView>

	<HorizontalScrollView
		android:id="@+id/hsvDrawingSettings"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/llBottomMenu"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:background="@drawable/transparent_inside_and_white_border"
		android:orientation="horizontal"
		android:visibility="gone" >

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:visibility="visible" >

			<ImageButton
				android:id="@+id/ibSave"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/shapes" />

			<ImageButton
				android:id="@+id/ibClearAll"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/clear" />

			<ImageButton
				android:id="@+id/ibEraser"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/eraser" />

			<ImageButton
				android:id="@+id/ibThin"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/pencil" />

			<ImageButton
				android:id="@+id/ibMedium"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:scaleX="0.8"
				android:scaleY="0.8"
				android:src="@drawable/pencil" />

			<ImageButton
				android:id="@+id/ibThick"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:scaleX="0.5"
				android:scaleY="0.5"
				android:src="@drawable/pencil" />

			<ImageButton
				android:id="@+id/ibRedo"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/transparent_inside_and_white_border"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/left_arrow" />

			<ImageButton
				android:id="@+id/ibUndo"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="4dp"
				android:background="@drawable/button_bg"
				android:contentDescription="@null"
				android:padding="5dp"
				android:scaleType="fitXY"
				android:src="@drawable/right_arrow" />
		</LinearLayout>
	</HorizontalScrollView>

	<!-- BOTTOM MENU -->

	<LinearLayout
		android:id="@+id/llBottomMenu"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true"
		android:layout_margin="10dp"
		android:clipChildren="false"
		android:orientation="horizontal" >

		<ImageButton
			android:id="@+id/ibDrawingSettings"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_margin="10dp"
			android:layout_weight="1"
			android:background="@drawable/button_bg"
			android:src="@drawable/drawing" />

		<ImageButton
			android:id="@+id/ibBrushColours"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_margin="10dp"
			android:layout_weight="1"
			android:background="@drawable/button_bg"
			android:src="@drawable/pen" />

		<ImageButton
			android:id="@+id/ibShapes"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_margin="10dp"
			android:layout_weight="1"
			android:background="@drawable/button_bg"
			android:src="@drawable/stack" />
	</LinearLayout>

</RelativeLayout>